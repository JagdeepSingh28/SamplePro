<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="200dp"
        android:layout_height="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:visibility="visible"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/headless_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Headless Fragment"
        android:layout_centerInParent="true"/>

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headless_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/start_task"
        android:onClick="start_task"/>

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_task"
        android:layout_alignStart="@+id/start_task"
        android:layout_marginTop="39dp"
        android:id="@+id/cancel_task"
        android:onClick="cancel_task"/>


</RelativeLayout>