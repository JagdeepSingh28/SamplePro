<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jagdeepsingh.samplepro.fragment.ListingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/listing_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/listing_fragment_text" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listing_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listing_heading"
        android:paddingTop="16dp"/>

    </RelativeLayout>
</FrameLayout>
