<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lib_web"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.singh.jagdeep.weblibrary.LibWebActivity">
    <TextView
        android:id="@+id/show_toast_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change text in Html from Android"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:background="#A4AA11"
        android:textColor="@android:color/white"
        android:onClick="showToastClick"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/android_et"
        android:layout_toLeftOf="@+id/show_toast_tv"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/android_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change text in Android from HTML"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/show_toast_tv"
        android:background="#A44E11"
        android:textColor="@android:color/white"
        />

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/android_tv"
        />

    <TextView
        android:id="@+id/html_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HTML CONTENT"
        android:layout_below="@id/webview"/>

</RelativeLayout>
